
{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/src/$1"
  },
  "modulePathIgnorePatterns": ["node_modules", "dist", "coverage"],
  "collectCoverageFrom": ["src/**/*.ts"]
}
